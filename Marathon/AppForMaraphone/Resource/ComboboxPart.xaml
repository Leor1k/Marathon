<UserControl x:Class="AppForMaraphone.Resource.ComboboxPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppForMaraphone.Resource"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas HorizontalAlignment="Center" Height="94" VerticalAlignment="Center" Width="342">
            <Rectangle HorizontalAlignment="Center" Height="93" Stroke="Black" VerticalAlignment="Center" Width="342" Fill="{DynamicResource ButtonColor}"/>
            <Rectangle HorizontalAlignment="Center" Height="76" Stroke="Black" VerticalAlignment="Top" Width="165" Canvas.Left="171" Canvas.Top="8"/>
            <TextBlock x:Name="NameChar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="54" TextWrapping="Wrap" Canvas.Left="10" Canvas.Top="20" TextAlignment="Center" FontWeight="Bold" FontSize="14"/>
            <Image x:Name="Logos" HorizontalAlignment="Left" Height="74" VerticalAlignment="Center" Width="163" Source="/Resource/Images/LogoCharity/aves-do-brazil-logo.png" Canvas.Left="173" Canvas.Top="10" Stretch="Fill" StretchDirection="DownOnly"/>

        </Canvas>

    </Grid>
</UserControl>
