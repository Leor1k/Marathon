            <TextBlock HorizontalAlignment="Left" Margin="576,514,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="512,636,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" FontSize="36"/>
            <TextBox x:Name="email_tv" HorizontalAlignment="Left" Margin="673,506,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Height="60" FontSize="36"/>
            <TextBox x:Name="pass_tv" HorizontalAlignment="Left" Margin="673,628,0,0" TextWrapping="Wrap" Visibility="Hidden" FontSize="36" VerticalAlignment="Top" Width="600" Height="60"/>
            <Button x:Name="login_bt" Content="Login" HorizontalAlignment="Left" Margin="755,760,0,0" VerticalAlignment="Top" Height="68" Width="186" Click="login_bt_Click"/>
            <Button Content="Canel" HorizontalAlignment="Left" Margin="972,760,0,0" VerticalAlignment="Top" Height="68" Width="186" Click="Button_Click"/>
            <PasswordBox x:Name="pass_pb" FontSize="36" HorizontalAlignment="Left" Margin="673,628,0,0" VerticalAlignment="Top" Width="600" Height="60"/>
            <CheckBox x:Name="check_pass" Content="Показать пароль" HorizontalAlignment="Left" Margin="1296,649,0,0" VerticalAlignment="Top" Height="18" Width="132" Checked="check_pass_Checked" Unchecked="check_pass_Unchecked"/>
        </Grid>
        <Grid x:Name="Register0as0a0runner0" d:IsLocked="True" d:IsHidden="True">
            <Rectangle Height="148" Margin="20,40,20,0" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="323,76,0,0" TextWrapping="Wrap" Text="MATATHON SKILLS 2016" Foreground="{StaticResource LightWhite}" VerticalAlignment="Top" FontSize="68" Width="864" TextAlignment="Center" FontWeight="Bold"/>
            <Button Content="Назад" HorizontalAlignment="Left" Margin="66,80,0,0" VerticalAlignment="Top" Height="68" Width="186" Click="Button_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,233,0,0" Text="Регистрация бегуна" VerticalAlignment="Top" Height="141" Width="860" FontSize="68" TextAlignment="Center" TextWrapping="Wrap"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,335,0,0" Text="Пожалуйста, заполните всю информацию, чтобы зарегестрироваться в качестве бегуна" VerticalAlignment="Top" Height="141" Width="1702" FontSize="45" TextAlignment="Center" TextWrapping="Wrap"/>
            <TextBlock HorizontalAlignment="Left" Margin="343,0,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Center" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="305,608,0,0" TextWrapping="Wrap" Text="Пароль:" VerticalAlignment="Top" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="122,700,0,0" TextWrapping="Wrap" Text="Повторите пароль:" VerticalAlignment="Top" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="357,788,0,0" TextWrapping="Wrap" Text="Имя:" VerticalAlignment="Top" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="1217,0,0,0" TextWrapping="Wrap" Text="Пол:" VerticalAlignment="Center" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="1029,608,0,0" TextWrapping="Wrap" Text="Дата рождения:" VerticalAlignment="Top" FontSize="36"/>
            <TextBlock HorizontalAlignment="Left" Margin="1167,700,0,0" TextWrapping="Wrap" Text="Страна:" VerticalAlignment="Top" FontSize="36"/>
            <TextBox x:Name="Email_tb" HorizontalAlignment="Left" Margin="441,515,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Height="43" FontSize="36"/>
            <TextBox x:Name="Password_tb" HorizontalAlignment="Left" Margin="441,608,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="519" Height="43" FontSize="36"/>
            <TextBox x:Name="repeat_password_tb" HorizontalAlignment="Left" Margin="441,700,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="519" Height="43" FontSize="36"/>
            <TextBox x:Name="Name_tb" HorizontalAlignment="Left" Margin="441,788,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="519" Height="43" FontSize="36" Text=""/>
            <ComboBox x:Name="Gender_cb" HorizontalAlignment="Left" Width="400" Height="43" FontSize="36" IsEditable="False" Margin="1322,515,0,0" VerticalAlignment="Top" BorderBrush="{DynamicResource LightWhite}" Background="{DynamicResource LightWhite}">
                <ComboBoxItem>
                    <TextBlock>Мужской</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock>Женский</TextBlock>
                </ComboBoxItem>

            </ComboBox>
            <TextBox x:Name="Date_birth" HorizontalAlignment="Left" Margin="1322,608,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="43" FontSize="36"/>
            <ComboBox x:Name="Country_cb" HorizontalAlignment="Left" Width="400" Height="43" FontSize="36" IsEditable="False" Margin="1322,700,0,0" VerticalAlignment="Top" BorderBrush="{DynamicResource LightWhite}" Background="{DynamicResource LightWhite}"/>
            <Button x:Name="Registration_bt" Content="Регистрация" HorizontalAlignment="Left" Margin="586,887,0,0" VerticalAlignment="Top" Height="68" Width="310"/>
            <Button x:Name="Canel_bt" Content="Отмена" HorizontalAlignment="Left" Margin="980,887,0,0" VerticalAlignment="Top" Height="68" Width="249" Click="Button_Click"/>
        </Grid>
        <Grid x:Name="Find0out0more0information" d:IsLocked="True" d:IsHidden="True">
            <Rectangle Height="148" Margin="20,40,20,0" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="323,76,0,0" TextWrapping="Wrap" Text="MATATHON SKILLS 2016" Foreground="{StaticResource LightWhite}" VerticalAlignment="Top" FontSize="68" Width="864" TextAlignment="Center" FontWeight="Bold"/>
            <Button Content="Назад" HorizontalAlignment="Left" Margin="66,80,0,0" VerticalAlignment="Top" Height="68" Width="186" Click="Button_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,225,0,0" Text="Подробная информация" VerticalAlignment="Top" Height="93" Width="860" FontSize="68" TextAlignment="Center" TextWrapping="Wrap"/>
            <Button HorizontalAlignment="Left" Margin="231,386,0,0" VerticalAlignment="Top" Height="154" Width="682" FontSize="48">
                <TextBlock Text="Marathon Skills 2016" TextAlignment="Center" FontStyle="Italic"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="231,566,0,0" VerticalAlignment="Top" Height="154" Width="682" FontSize="48">
                <TextBlock Text="Предыдущие &#10; результаты" TextAlignment="Center" FontStyle="Italic"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="231,746,0,0" VerticalAlignment="Top" Height="154" Width="682" FontSize="48">
                <TextBlock Text="BMI калькулятор" TextAlignment="Center" FontStyle="Italic"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="960,386,0,0" VerticalAlignment="Top" Height="154" Width="682" FontSize="48">
                <TextBlock Text="Насколько долгий&#10;марафон" TextAlignment="Center" FontStyle="Italic"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="960,566,0,0" VerticalAlignment="Top" Height="154" Width="682" FontSize="48">
                <TextBlock Text="Список благотворительных&#10;организаций" TextAlignment="Center" FontStyle="Italic"/>
            </Button>
            <Button HorizontalAlignment="Left" Margin="960,746,0,0" VerticalAlignment="Top" Height="154" Width="682" FontSize="48">
                <TextBlock Text="BMR калькулятор" TextAlignment="Center" FontStyle="Italic"/>
            </Button>
        </Grid>
    </Grid>
</Window>
